#include <stdio.h>
 
 
int main()
{
	printf("enter the no of rows");
	int m;
	int n;
	scanf("%d",&m);
	printf("enter the no of cols");
	scanf("%d",&n);
	int a[m][n];
	printf("enter the elements of a 2-d matrix");
	for(int i=0;i<m;i++)
	{
		for(int j=0;j<n;j++)
		{
			scanf("%d",&a[m][n]);
		}
		
	}
	printf("display input 2 d array \n");
	for(int i=0;i<m;i++)
	{
		for(int j=0;j<n;j++)
		{
			printf("%d",a[m][n]);
		}
		printf("\n");
		
	}
	
	if(m>n)
	{
		int t[n][m];
		for(int i=0;i<n;i++)
		{
			for(int j=0;j<m;j++)
			{
				t[i][j]=a[j][i];
			}
			
		}
	}
	printf("display output array \n");
	for(int i=0;i<m;i++)
	{
		for(int j=0;j<n;j++)
		{
			printf("%d",a[m][n]);
		}
		printf("\n");
		
	}
	
	}
	
		
